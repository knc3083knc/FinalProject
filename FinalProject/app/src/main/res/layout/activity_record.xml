<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aneazxo.finalproject.Activity.RecordActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:id="@+id/constraintLayout4">

        <Button
            android:id="@+id/toMainBtn"
            android:layout_width="325dp"
            android:layout_height="68dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@android:color/holo_red_light"
            android:text="กลับ"
            android:textColor="?attr/colorBackgroundFloating"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="419dp" />

        <Button
            android:id="@+id/ptt"
            android:layout_width="327dp"
            android:layout_height="104dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1"
            android:background="@android:color/holo_green_light"
            android:text="เลือกชื่อจุดหมายด้วยเสียง"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/txtInput"
        android:layout_width="330dp"
        android:layout_height="68dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="141dp"
        android:background="@android:color/holo_green_light"
        android:text="เลือกชื่อจุดหมายด้วยการพิมพ์"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4" />

    <EditText
        android:id="@+id/editTxtInput"
        android:layout_width="168dp"
        android:layout_height="60dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="266dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4" />

    <Button
        android:id="@+id/startRecTxtInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="266dp"
        android:background="@android:color/holo_green_light"
        android:text="เริ่มการบันทึกเส้นทาง"
        android:visibility="gone"
        app:layout_constraintHorizontal_bias="0.612"
        app:layout_constraintLeft_toRightOf="@+id/editTxtInput"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4" />

</android.support.constraint.ConstraintLayout>
